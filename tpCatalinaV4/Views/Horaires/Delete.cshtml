@model tpCatalinaV4.Models.Horaire

@{
    ViewData["Title"] = "Delete";
}

<h1>Suppression d'un horaire</h1>

h3>Etes-vous sur de vouloir supprimer?</h3>
<div>
    <h4>Horaire</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NbRepet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NbRepet)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Utilisateur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Utilisateur.UtilisateurID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tache)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tache.TacheID)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="HoraireID" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour a l'horaire general</a>
    </form>
</div>
